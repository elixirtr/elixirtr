<h1>Show Company</h1>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @company.name %>
  </li>

  <li>
    <strong>Title:</strong>
    <%= @company.title %>
  </li>

  <li>
    <strong>Logo:</strong>
    <%= @company.logo %>
  </li>

</ul>

<%= if @company.added_by == @current_user.id do %>
  <span><%= link "Edit", to: Routes.company_path(@conn, :edit, @company) %></span>
<% end %>
<span><%= link "Back", to: Routes.company_path(@conn, :index) %></span>
